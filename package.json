{
    "name": "beeteller",
    "version": "1.0.0",
    "description": "a currency displayer",
    "main": "index.js",
    "repository": "https://github.com/WaifuForever/selecao-full-stack",
    "author": "wf",
    "license": "MIT",
    "jest": {
        "verbose": true,
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "setupFiles": [
            "dotenv/config"
        ],
        "modulePathIgnorePatterns": [
            "dist"
        ],
        "setupFilesAfterEnv": [
            "./test/config/test.config.ts"
        ]
    },
    "scripts": {
        "build": "tsc",
        "start": "set NODE_ENV=dev&& ts-node-dev --respawn --transpile-only --exit-child --watch src src/index.ts dotenv_config_path=./.env.dev",
        "start:prod": "set NODE_ENV=dev&& node build/src/index.js dotenv_config_path=./.env.dev",
        "start:dev": "set NODE_ENV=dev&& ts-node-dev --respawn --transpile-only --exit-child --watch src src/index.ts dotenv_config_path=./.env.dev",
        "test": "set NODE_ENV=test&& DOTENV_CONFIG_PATH=./.env.test jest --watch --runInBand",
        "test:e2e": "set NODE_ENV=test&& DOTENV_CONFIG_PATH=./.env.test jest --watchAll --runInBand --detectOpenHandles test/specs/e2e/",
        "test:unit": "set NODE_ENV=test&& DOTENV_CONFIG_PATH=./.env.test jest --watchAll --runInBand --detectOpenHandles test/specs/unit/"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.4.1",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/mongodb-memory-server": "^2.3.0",
        "@types/node": "^17.0.21",
        "@types/supertest": "^2.0.11",
        "@types/yup": "^0.29.13",
        "jest": "^27.5.1",
        "mongodb-memory-server": "^8.4.1",
        "supertest": "^6.2.2",
        "ts-jest": "^27.1.3",
        "ts-node-dev": "^1.1.8",
        "tsc": "^2.0.4",
        "typescript": "^4.6.2"
    },
    "dependencies": {
        "axios": "^0.26.1",
        "bcrypt": "^5.0.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.2.7",
        "yup": "^0.32.11"
    }
}
